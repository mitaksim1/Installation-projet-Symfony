{% extends 'base.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <h1>Plat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>
                    {% if plat.Category.name is defined %}
                    {{ plat.Category.name }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ plat.description }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class="btn-styles">
        <a href="{{ path('plat_edit', {'id': plat.id}) }}" class="btn btn-success btn-style">edit</a>  
    </div>
    
    {{ include('plat/_delete_form.html.twig') }}
    
    <a href="{{ path('plat_index') }}">back to list</a>
{% endblock %}

{# Scripts #}
{% block javascripts %}
    {# Appel au fichier assets/form.js #}
    {{ encore_entry_script_tags('form') }}
{% endblock %}
